{
  "name": "lima",
  "version": "1.0.0",
  "description": "",
  "main": "package.json",
  "scripts": {
    "serve": "nodemon --watch src -e pug,scss,js,json --exec babel-node server.js",
    "css":"node-sass src/scss/styles.scss -o ./public/ -w src/scss/styles.scss --output-style compressed",
    "watchify": "watchify ./src/js/index.js -d -o ./public/script.js -t [babelify --presets[env]] -v",
    "browserify": "browserify ./src/js/index.js -d -o ./public/script.js -t [babelify --presets[env]]",
    "start": "npm run css | npm run watchify | npm run serve "
  },
  "author": "JMMoriones",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "ack-reload": "^3.1.2",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babelify": "^7.3.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "node-sass": "^6.0.1",
    "node-sass-middleware": "^0.11.0",
    "nodemon": "^2.0.15",
    "pug": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "watchify": "^4.0.0"
  }
}
